<?xml version="1.0" encoding="utf-8" ?>
<nlog xmlns="http://www.nlog-project.org/schemas/NLog.xsd"
      xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
      autoReload="true"
      internalLogLevel="Info"
      internalLogFile="c:\temp\internal-nlog.txt">

  <!-- enable asp.net core layout renderers -->
  <extensions>
    <add assembly="NLog.Web.AspNetCore"/>
  </extensions>

  <!-- the targets to write to -->
  <targets>
    <!-- write logs to file  -->
    <target xsi:type="File" name="Pegusus.Error" fileName="c:\PegusuLogs\Error-${shortdate}.log"
           layout="${date}|${level:uppercase=true}|${callsite:skipFrames=1} - ${message} ${exception}|${logger}|${all-event-properties}" />
    <target xsi:type="File" name="Pegusus.Info" fileName="c:\PegusuLogs\Info-${shortdate}.log" layout="${date}|${level:uppercase=true}|${callsite:skipFrames=1} - ${message} ${exception}|${logger}|${all-event-properties}" />   
    <target xsi:type="File" name="Pegusus.Fatal" fileName="c:\PegusuLogs\Fatal-${shortdate}.log" layout="${date}|${level:uppercase=true}|${callsite:skipFrames=1} - ${message} ${exception}|${logger}|${all-event-properties}" /> 
    <target xsi:type="File" name="Pegusus.Debug" fileName="c:\PegusuLogs\Debug-${shortdate}.log" layout="${date}|${level:uppercase=true}|${callsite:skipFrames=1} - ${message} ${exception}|${logger}|${all-event-properties}" />  </targets>

  <!-- rules to map from logger name to target -->
  <rules>
    <!--All logs, including from Microsoft-->
    <logger name="Pegusus.*" minlevel="Info" maxlevel="Info" writeTo="Pegusus.Info" />
    <logger name="Pegusus.*" minlevel="Error" maxlevel="Error" writeTo="Pegusus.Error" />
    <logger name="Pegusus.*" minlevel="Fatal" maxlevel="Fatal" writeTo="Pegusus.Fatal" />
    <logger name="Pegusus.*" minlevel="Debug" maxlevel="Debug" writeTo="Pegusus.Debug" />

 
   
  </rules>
</nlog>